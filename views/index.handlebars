<style media="screen">
	body {
		background: url("https://images7.alphacoders.com/817/thumb-1920-817988.jpg");
		background-size: cover;
		font: 'Raleway', sans-serif;
		text-align: center;
		text-transform: uppercase;
		letter-spacing: .5em;
		top: 15%;

	}

	h1 {
		margin-top: 10px;
		font: 600 3.5em 'Raleway', sans-serif;
		font-family: 'Pathway Gothic One', sans-serif;
		font-size: 100px;
		color: rgba(255, 255, 255, 0.801);
		text-align: center;
		text-transform: uppercase;
		border: letter-spacing: .5em;
		width: 100%;
	}

	.container {
		margin-top: 20px;
		padding: 25px;
	}

	p {
		font: 100 1em 'Raleway', sans-serif;
		color: rgba(212, 192, 9, 0.904);
		text-align: center;
		text-transform: uppercase;
		letter-spacing: 0.02em;
	}

	h3 {
		font: 100 1em 'Raleway', sans-serif;
		color: rgba(255, 255, 255, 0.904);
		text-align: center;
		text-transform: uppercase;
		letter-spacing: 0.02em;
	}

	img {
		margin-top: -75px;
		transition: all 1s;
	}

	img:hover {
		transform: scale(1.12);
	}

	pre {
		color: rgb(216, 0, 0);
		font: 100 1em 'Raleway', sans-serif;
		text-align: center;
		text-transform: uppercase;
		letter-spacing: 0.01em;
		margin-top: -20px;
	}

	.btn {
		margin-top: -15px;
		margin-bottom: 10px;
		border-radius: 8px;
	}

	.container2 {
		border: 1px solid rgba(212, 192, 9, 0.75); /* use solid instead of dashed for a solid border */
		margin-top: -25px;
		padding: 25px;
		margin-left: 100px;
		margin-right: 100px;
		
	}
	
</style>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
			<h1>EAT-DA-BURGER!</h1>
			<img src="https://png.icons8.com/color/96/000000/hamburger.png">
		</div>
		<div class="col-xs-12 text-center enter_section">
			<p>Enter in a burger you would like to eat!</p>
			<form action="/burgers/create" method="POST">
				<input type="text" name="burger_name" class="form-control" value="" id="enter_text" placeholder="Delicious!">
				<button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
			</form>
		</div>
	</div>
</div>

<div class="container2">
	<div class="col-xs-9 text-center" class="task">
		<div class="row">

			<br> {{#each burger_data}} {{#unless this.devoured}}
			<div class="col-xs-9 text-center">
				<pre>{{this.id}}. {{this.burger_name}}</pre>
			</div>
			<div class="col-xs-3 text-center">
				<form method="POST" action="/burgers/update?_method=PUT" class="button-size">
					<input type="hidden" name="burger_id" type="text" value={{this.id}}>
					<br>
					<button type="submit" class="btn btn-default">
						DEVOUR IT!</button>
				</form>
			</div>
			{{/unless}} {{/each}}
		</div>
	</div>

	<div class="col-xs-6 text-center" class="task">
		<hr>
		<h3>Burgers Devoured!</h3>
		<div class="row">
			{{#each burger_data}} {{#if this.devoured}}
			<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly> {{/if}} {{/each}}
		</div>
	</div>
</div>
</div>